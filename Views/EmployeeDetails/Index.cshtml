@model List<ITSAIntermediate_VelaphiMhlanga.Models.Domain.EmployeeDetail>

@{
}

<h1> EMPLOYEE DETAIL LIST </h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Department</th>
            <th>eRole</th>
            <th>Salary</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employeeDetails in Model)
        {
            <tr>
                <td>@employeeDetails.Id</td>
                <td>@employeeDetails.Department</td>
                <td>@employeeDetails.eRole></td>
                <td>@employeeDetails.Salary.ToString("")</td>
                <td><a href="EmployeeDetails/View/@employeeDetails.Department">View</a></td>
            </tr>
        }

    </tbody>
</table>

