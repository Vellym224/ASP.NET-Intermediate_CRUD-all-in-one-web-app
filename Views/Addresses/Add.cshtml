@model ITSAIntermediate_VelaphiMhlanga.Models.AddAddressViewModel


@{
}

<h1>Add ADDRESS </h1>
<form method="post" action="Add" class="mt-3">
    <div class="mb-3">
        <label for="" class="form-label">Country</label>
        <input type="text" class="form-control" asp-for="Country">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Province</label>
        <input type="text" class="form-control" asp-for="Province">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Suburb</label>
        <input type="text" class="form-control" asp-for="Suburb">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Postal Code</label>
        <input type="number" class="form-control" asp-for="PostalCode">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Unit Number</label>
        <input type="number" class="form-control" asp-for="UnitNumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Complex Name</label>
        <input type="number" class="form-control" asp-for="ComplexName">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
